install_ansible() 
{
	TARGET_DIR=${1}
	ANSIBLE_DIR=$HOME/.ansible
	echo "-----> Installing ansible to $ANSIBLE_DIR"
	
	
	cd /tmp
	#[ -d ansible/ ] && echo "-----> removing temp ansible"; rm -fr ansible/ 
	
	git clone git://github.com/ansible/ansible.git
		
	[ -d $ANSIBLE_DIR ] && echo "-----> removing $ANSIBLE_DIR"; rm -fr $ANSIBLE_DIR/
	mkdir -p $ANSIBLE_DIR
	cp -R ansible/* $ANSIBLE_DIR
	chmod +x $ANSIBLE_DIR/bin/*
  	
  	#ls -la $ANSIBLE_DIR/bin/ansible
  	
  	#export PATH="$ANSIBLE_DIR/bin:$PATH"  	
	echo "-----> ansible installed at $ANSIBLE_DIR"

}