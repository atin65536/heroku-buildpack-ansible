#!/bin/sh 

set -e

export BUILD_DIR=$1
export CACHE_DIR=$2
export ENV_DIR=$3

echo "-----> BUILD_DIR=$BUILD_DIR"
echo "-----> CACHE_DIR=$CACHE_DIR"
echo "-----> ENV_DIR=$ENV_DIR"

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
. $BIN_DIR/ansible

ls -la $ENV_DIR

install_ansible $BUILD_DIR

ls -la $BUILD_DIR
ls -la $BUILD_DIR/.profile.d

cat $BUILD_DIR/.profile.d/default-proc-warning.sh
cat $BUILD_DIR/.profile.d/jdbc.sh
cat $BUILD_DIR/.profile.d/jvmcommon.sh