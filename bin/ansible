install_ansible() 
{
	BUILD_DIR=${1}
	HEROKU_DIR=$BUILD_DIR/.heroku/
	ANSIBLE_DIR=$HEROKU_DIR/ansible/
	echo "Installing ansible to $BUILD_DIR"
	
	cd /tmp
	git clone git://github.com/ansible/ansible.git
	cp -R ansible $HEROKU_DIR
	chmod +x $ANSIBLE_DIR/bin/*
	
  	export PATH="$ANSIBLE_DIR/bin:$PATH"
  	echo "PATH=$PATH"
	echo "ansible has been installed at $ANSIBLE_DIR"	
}