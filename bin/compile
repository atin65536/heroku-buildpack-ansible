#!/bin/sh 

set -e

export BUILD_DIR=$1
export CACHE_DIR=$2
export ENV_DIR=$3

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
. $BIN_DIR/ansible

ls -la $ENV_DIR

install_ansible $CACHE_DIR

ls -la ${BUILD_DIR}
ls -la ${BUILD_DIR}/.profile.d
	
